@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex">
    <table class="table table-hover" id="table1" width="100%">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header header-color">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detail Pokemon</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col col-img-badge">
                        <div class="row">
                            <img src="" alt="" id="imgPoke" />
                        </div>
                        <div class="row row-name">
                            <h2 class="name-pokemon"></h2>
                        </div>
                        <div class="row" id="rowBadge">
                        </div>
                    </div>
                    <div class="col col-desc overflow-scroll" style="max-height: 450px">
                        <div class="row" role="tabpanel">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#stats" aria-controls="stats" data-bs-toggle="tab" role="tab">Stats</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#abilities" aria-controls="abilities" data-bs-toggle="tab" role="tab">Abilities</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="stats">
                                    <h2>Stats</h2>
                                    <div class="stats">
                                        <h5>HP</h5>
                                        <progress id="hp" value="0" max="200" style="--value: 0; --max: 200;"></progress>
                                        <h5>Attack</h5>
                                        <progress id="attack" value="25" max="200" style="--value: 25; --max: 200;"></progress>
                                        <h5>Defense</h5>
                                        <progress id="defense" value="50" max="200" style="--value: 50; --max: 200;"></progress>
                                        <h5>Spesial Attack</h5>
                                        <progress id="specialAttack" value="75" max="200" style="--value: 75; --max: 200;"></progress>
                                        <h5>Spesial Defense</h5>
                                        <progress id="specialDefense" value="100" max="200" style="--value: 100; --max: 200;"></progress>
                                        <h5>Speed</h5>
                                        <progress id="speed" value="100" max="200" style="--value: 100; --max: 200;"></progress>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane" id="abilities">
                                    <div class="abilities-0">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="desc-card">
                        <h3 class="desc-title">Description</h3>
                        <blockquote class="description"></blockquote>
                        <p class="base-experience">Base Experience :</p>
                        <p class="height">Height : </p>
                        <p class="weight">Weight :</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>





